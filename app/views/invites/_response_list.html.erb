<div id="InviteResponses" class="ui styled fluid accordion">
  <div class="title">
    <i class="dropdown icon"></i>
    <span style="color: #444"><i class="users icon"></i> Who's coming</span>
  </div>
  <div class="content">
    <div id="InviteResponsesList" class="ui list">
      <% guestlist.each do |guest| %>
        <div class="item">
          <img src="<%= guest.picture_url %>" class="ui avatar image" />
          <span><%= guest.full_name %></span>
          <% if guest.response == 'declined' %>
            <div class="ui lightgrey horizontal label">Declined</div>
          <% elsif guest.response == 'accepted' %>
            <div class="ui green horizontal label">Accepted</div>
          <% else %>
            <div class="ui basic horizontal label">Seen</div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#InviteResponses').accordion();
</script>
