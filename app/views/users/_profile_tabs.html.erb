<style>
  #UserProfileImage .smallPaddedColumn {
    padding: 14px 7px 7px 7px;
  }

  #UserProfileImage .image {
    width: 3rem;
    margin: auto;
  }

  #UserProfileImage .text {
    font-weight: bold;
    font-size: 1.2em;
  }

  #ProfileMenu .item {
    padding-left: 13px;
    padding-right: 13px;
  }
</style>

<div id="UserProfileImage" class="ui grid">
  <div class="six wide column smallPaddedColumn">
    <img src="/assets/israel.png"
         class="ui medium circular image" />
  </div>
  <div class="ten wide column" style="padding-top: 25px">
    <span class="text">Israel Madueme</span>
  </div>
</div>
<div id="ProfileMenu" class="ui blue secondary pointing menu">
  <%= link_to 'Activity', user_activity_path(@user), class: 'active item' %>
  <%= link_to 'Goals', user_goals_path(@user), class: 'item' %>
  <%= link_to 'Interests', user_interests_path(@user), class: 'item' %>
  <%= link_to 'Availability', user_availability_path(@user), class: 'item' %>
</div>