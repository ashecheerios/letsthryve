<style>
  #LogGoals .status {
  	padding-bottom: 0.5em;
    margin-bottom: 0.75rem;
    border-bottom: 1px solid #d3d3d3;
  }
  #LogGoals .goalsContainer {
    margin-bottom: 0.75rem;
    border-bottom: 1px solid #d3d3d3;
  }

  #LogGoals .goalContainer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }
</style>

<div id="LogGoals">
  <div class="status">
    Which of your goals did you accomplish today?
  </div>
  <div class="goalsContainer">
  <% (1..3).each do %>
    <div class="goalContainer">
      <div class="goalDetails">
        <p>
          I ran 8 miles today<br />
        </p>
      </div>
      <div class="mini ui buttons">
        <button class="mini ui button">Nay</button>
        <div class="or"></div>
        <button class="mini ui positive button">Yay</button>
      </div>
    </div>

  <% end %>
</div>
</div>




